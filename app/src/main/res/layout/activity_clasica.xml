<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clasica"
    tools:context=".Clasica">



  <Button
      android:id="@+id/btnAnteriorC"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@android:drawable/ic_media_previous"
      android:onClick="AnteriorC"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.722"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.806" />

  <Button
      android:id="@+id/btnSiguienteC"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@android:drawable/ic_media_next"
      android:onClick="SiguienteC"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.916"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.806" />

  <ImageView
      android:id="@+id/imageViewC"
      android:layout_width="291dp"
      android:layout_height="293dp"
      android:contentDescription="@string/app_name"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.49"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.195"
      app:srcCompat="@drawable/ic1ch" />
  <ImageButton
      android:id="@+id/btnPlayC"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:onClick="PlayPauseC"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.099"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.809"
      app:srcCompat="@drawable/playc" />

  <ImageButton
      android:id="@+id/btnStopC"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:onClick="StopC"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.307"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.806"
      app:srcCompat="@drawable/stop" />

  <ImageButton
      android:id="@+id/btnRepetirC"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:onClick="RepetirC"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.531"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.806"
      app:srcCompat="@drawable/repetir" />
</androidx.constraintlayout.widget.ConstraintLayout>